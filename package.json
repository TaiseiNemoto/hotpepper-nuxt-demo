{
  "name": "hotpepper-nuxt-demo",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.21.1",
    "npm": "0.0.0"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && husky",
    "type-check": "nuxt typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"app/**/*.{vue,scss,css}\" --allow-empty-input",
    "lint:css:fix": "stylelint \"app/**/*.{vue,scss,css}\" --fix --allow-empty-input",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@nuxt/eslint": "1.10.0",
    "eslint": "^9.0.0",
    "nuxt": "^4.2.0",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "packageManager": "yarn@4.10.3",
  "devDependencies": {
    "@nuxt/test-utils": "^3.20.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "msw": "^2.11.6",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.12.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.0",
    "vue-tsc": "^3.1.2"
  }
}
